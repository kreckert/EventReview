<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<?import javafx.collections.FXCollections?>
<?import java.lang.Integer?>
<GridPane fx:controller="GUI.MyController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Text text="Rating Details"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Event's name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="eventNameField"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Author:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="authorField"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Rate :"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <ComboBox fx:id="rateCombo" promptText="rate"
              GridPane.columnIndex="1" GridPane.rowIndex="3">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Integer fx:value="0"/>
                <Integer fx:value="1"/>
                <Integer fx:value="2"/>
                <Integer fx:value="3"/>
                <Integer fx:value="4"/>
                <Integer fx:value="5"/>
                <Integer fx:value="6"/>
                <Integer fx:value="7"/>
                <Integer fx:value="8"/>
                <Integer fx:value="9"/>
                <Integer fx:value="10"/>
            </FXCollections>
        </items>
    </ComboBox>


    <TextArea fx:id="commentArea" text="Type your comments..."
               GridPane.rowIndex="5" GridPane.columnSpan="2"
               prefHeight="150"/>


    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="Submit Rating"
                onAction="#addEventRating"/>
    </HBox>


    <Text fx:id="resultField"
          GridPane.columnIndex="1" GridPane.rowIndex="8"/>


</GridPane>